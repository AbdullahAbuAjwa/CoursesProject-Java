<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane fx:id="root" prefHeight="646.0" prefWidth="810.0" style="-fx-background-color: #CBD4CA;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controller.ShowInstructor">

    <children>
        <Button layoutX="366.0" layoutY="531.0" mnemonicParsing="false" onAction="#addNewInstructor" prefHeight="34.0"
                prefWidth="130.0" style="-fx-background-color: #059200; -fx-border-color: #000;"
                text="Add new instructor" textFill="WHITE">
            <font>
                <Font size="13.0"/>
            </font>
        </Button>
        <ComboBox fx:id="instructor_id" layoutX="43.0" layoutY="48.0" onAction="#showInformation" prefHeight="34.0"
                  prefWidth="158.0" promptText="Enter instructor id"
                  style="-fx-background-radius: 15; -fx-background-color: #fff; -fx-border-radius: 15;">

        </ComboBox>
        <Label layoutX="14.0" layoutY="127.0" prefHeight="30.0" prefWidth="78.0" style="-fx-font-weight: bold;"
               text="Name" textFill="RED">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <Text fx:id="ins_name" layoutX="162.0" layoutY="148.0" stroke="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
              textAlignment="CENTER" wrappingWidth="94.38709259033203">
            <font>
                <Font size="15.0"/>
            </font>
        </Text>
        <Label layoutX="14.0" layoutY="176.0" prefHeight="30.0" prefWidth="157.0" style="-fx-font-weight: bold;"
               text="Courses who teaches" textFill="RED">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <Label layoutX="356.0" layoutY="126.0" prefHeight="30.0" prefWidth="94.0" style="-fx-font-weight: bold;"
               text="Phone" textFill="RED">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>

        <Button layoutX="221.0" layoutY="531.0" mnemonicParsing="false" onAction="#backToHome" prefHeight="34.0"
                prefWidth="120.0" style="-fx-background-color: #059200; -fx-border-color: #000;" text="Back"
                textFill="WHITE">
            <font>
                <Font size="13.0"/>
            </font>
        </Button>
        <Text fx:id="ins_phone" layoutX="439.0" layoutY="148.0" stroke="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
              textAlignment="CENTER" wrappingWidth="94.38709259033203">
            <font>
                <Font size="15.0"/>
            </font>
        </Text>
        <Text fx:id="ins_teaches" layoutX="174.0" layoutY="197.0" stroke="WHITE" strokeType="OUTSIDE" strokeWidth="0.0"
              textAlignment="CENTER" wrappingWidth="94.38709259033203">
            <font>
                <Font size="15.0"/>
            </font>
        </Text>
        <Button layoutX="439.0" layoutY="294.0" mnemonicParsing="false" onAction="#addInsToNewCourse" text="Save"/>
        <Label layoutX="13.0" layoutY="292.0" prefHeight="30.0" prefWidth="246.0" style="-fx-font-weight: bold;"
               text="Add the instructor to new course" textFill="RED">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <ComboBox fx:id="course_id" layoutX="268.0" layoutY="294.0" onAction="#showInformation" promptText="Enter course id"
                  style="-fx-background-radius: 15; -fx-background-color: #fff; -fx-border-radius: 15;"/>
    </children>

</AnchorPane>
